<!DOCTYPE html>
<html>
<head>
    <title>Result</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style type="text/css">
      .container {
        max-width: 500px;
        padding-top: 100px;
      }
    </style>
</head>
<body>
<div class="container">
    <h1>{{ result["title"] }}</h1>
    <img src="{{ result["image"] }}">

    <p><b>Title Type</b>: {{ result["type"] }}</p>

    {% if result["rating"] %}
        <p><b>Rating</b>: {{ result["rating"] }}/10</p>
    {% endif %}

    <p><b>Release Date</b>: {{ result["release_date"] }}</p>
    <p><b>Runtime</b>: {{ result["runtime"] }}</p>

    {% if "genres" in result.keys() and result["genres"] %}
        <p><b>Genres</b>:</p>
        <ul>
            {% for genre in result["genres"] %}
                <li>{{ genre }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if "stars" in result.keys() and result["stars"] %}
        <p><b>Starred By</b>:</p>
        <ul>
            {% for star in result["stars"] %}
                <li>{{ star }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if "directors" in result.keys() and result["directors"] %}
        <p><b>Directed By</b>:</p>
        <ul>
            {% for director in result["directors"] %}
                <li>{{ director }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if "creators" in result.keys() and result["creators"] %}
        <p><b>Created By</b>:</p>
        <ul>
            {% for creator in result["creators"] %}
                <li>{{ creator }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if "writers" in result.keys() and result["writers"] %}
        <p><b>Written By</b>:</p>
        <ul>
            {% for writer in result["writers"] %}
                <li>{{ writer }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <p><b>Synopsis</b>: {{ result["story_line"] }}</p>

    <p><b>Produced by</b>: {{ result["production_company"] }}</p>


</div>
<script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
</body>
</html>